generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(uuid())
  name        String
  phoneNumber String    @unique
  password    String
  email       String?   @unique
  Contact     Contact[]
  Token       Token[]
  createdAt   DateTime  @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime  @updatedAt @db.Timestamptz(6)
}

model Contact {
  id          String   @id @default(uuid())
  name        String
  phoneNumber String   @unique
  email       String?
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now()) @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @db.Timestamptz(6)
}

model Token {
  id          String       @id @default(uuid())
  token       String
  type        TokenType
  expires     DateTime
  blacklisted Boolean
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime  @default(now())
}

enum TokenType {
  ACCESS
  REFRESH
}
